@model Question

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<h4>Задание</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <input type="hidden" asp-for="DisciplinecdNavigation" /> *@
            <input type="hidden" asp-for="Questioncd" />
            <div class="form-group">
                <label asp-for="Questionnm" class="control-label"></label>
                <input asp-for="Questionnm" class="form-control" />
                <span asp-validation-for="Questionnm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Testcd" class="control-label"></label>
                <select asp-for="Testcd" class="form-control" asp-items="ViewBag.Testcd"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
