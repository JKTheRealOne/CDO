@model Theme

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Тема</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Themename" class="control-label"></label>
                <input asp-for="Themename" class="form-control" />
                <span asp-validation-for="Themename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Themevolume" class="control-label"></label>
                <input asp-for="Themevolume" class="form-control" />
                <span asp-validation-for="Themevolume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Disciplinecd" class="control-label"></label>
                <select asp-for="Disciplinecd" class="form-control" asp-items="ViewBag.Disciplinecd"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
