@model Discipline

@{
    ViewData["Title"] = "Edit";
}

<h1>Изменить</h1>

<h4>Дисциплина</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UsercdNavigation" />
            <input type="hidden" asp-for="Disciplinecd" />
            <div class="form-group">
                <label asp-for="Disciplinename" class="control-label"></label>
                <input asp-for="Disciplinename" class="form-control" />
                <span asp-validation-for="Disciplinename" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usercd" class="control-label"></label>
                <select asp-for="Usercd" class="form-control" asp-items="ViewBag.Usercd"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
